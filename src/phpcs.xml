<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>PHPCS Config</description>

    <file>app/</file>
    <file>database/factories/</file>
    <file>database/migrations/</file>
    <file>database/seeds/</file>
    <file>routes/</file>
    <file>tests/</file>

    <extensions>php</extensions>

    <rule ref="PSR2"/>
    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <severity>0</severity>
    </rule>
    <rule ref="Generic.Files.LineLength">
        <severity>3</severity>
    </rule>
</ruleset>
